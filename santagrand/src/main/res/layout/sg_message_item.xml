<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:weightSum="100"
    android:layout_height="@dimen/message_item_size"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_width"
        android:background="@color/SG_Gray"
        android:layout_marginBottom="@dimen/message_item_margin_top"
        />
    <LinearLayout
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="99"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center">
            <ImageView
                android:layout_marginTop="@dimen/message_item_margin_top"
                android:layout_marginBottom="@dimen/message_item_margin_top"
                android:id="@+id/iv_status"
                android:src="@drawable/msg_unread"
                android:layout_width="@dimen/weather_width"
                android:layout_height="@dimen/weather_height" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/divider_width">

            <TextView
                android:id="@+id/tv_subject"
                android:text="Message"
                android:textSize="@dimen/font_xbig"
                android:textStyle="bold"
                android:textColor="@color/SG_Gray"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:gravity="bottom"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:orientation="horizontal">
                <TextView
                    android:gravity="top"
                    android:id="@+id/tv_date"
                    android:textColor="@color/SG_Gray"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/font_big"
                    android:text="05-September-16"/>

                <View
                    android:layout_marginRight="@dimen/divider_margin_x"
                    android:layout_marginLeft="@dimen/divider_margin_x"
                    android:layout_marginTop="@dimen/divider_margin_y"
                    android:layout_marginBottom="@dimen/divider_margin_y"
                    android:background="@color/SG_Gray"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/divider_height"/>
                <TextView
                    android:gravity="top"
                    android:id="@+id/tv_time"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/font_big"
                    android:textColor="@color/SG_Gray"
                    android:text="11:30 am"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <View
            android:visibility="gone"
            android:id="@+id/v_bot"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_width"
            android:background="@color/SG_Gray"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</LinearLayout>
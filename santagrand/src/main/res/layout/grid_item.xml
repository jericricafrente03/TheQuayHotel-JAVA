<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/gv_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/box_selector"
            android:layout_marginLeft="@dimen/tv_grid_item_margin"
            android:layout_marginRight="@dimen/tv_grid_item_margin"
            android:layout_marginBottom="@dimen/tv_grid_item_margin_bottom"
            android:layout_width="@dimen/tv_grid_item_w"
            android:layout_height="@dimen/tv_grid_item_h"
            android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="70"
                    android:layout_marginLeft="@dimen/tv_grid_item_padding"
                    android:layout_marginRight="@dimen/tv_grid_item_padding"
                    android:layout_marginTop="@dimen/tv_grid_item_image_margin_top"
                    android:orientation="vertical"
                    android:gravity="center">
                        <ImageView
                            android:id="@+id/iv_icon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="30"
                    android:layout_marginTop="@dimen/tv_grid_item_label_margin_top"
                    android:layout_marginLeft="@dimen/tv_grid_item_padding"
                    android:layout_marginRight="@dimen/tv_grid_item_padding"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_desc"
                            android:textSize="@dimen/tv_grid_item_text"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"/>

                </LinearLayout>
        </LinearLayout>


</LinearLayout>
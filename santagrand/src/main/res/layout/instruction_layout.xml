<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:src="@drawable/airmedia_android"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:textAllCaps="true"
            android:id="@+id/tv_label"
            android:textSize="@dimen/font_xxxbig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/SG_Gray"
            android:textStyle="bold"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/tv_credentials"
            android:layout_marginBottom="@dimen/airmedia_margin_bottom"
            android:textSize="@dimen/font_xbig"
            android:textColor="@color/SG_Gray"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ListView
            android:divider="@android:color/transparent"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lv_instruction"/>


    </LinearLayout>


</RelativeLayout>
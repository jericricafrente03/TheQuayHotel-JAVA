<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_selection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:textAllCaps="true"
            android:id="@+id/tv_label"
            android:textSize="@dimen/font_xbig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/SG_Gray"
            android:text="@string/airmedia_intro"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/airmedia_margin_bottom"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="15"/>
                <LinearLayout
                    android:id="@+id/ll_panel1"
                    android:paddingLeft="@dimen/instruction_padding"
                    android:paddingRight="@dimen/instruction_padding"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/instruction_selector"
                    android:layout_margin="@dimen/instruction_margin"
                    android:layout_width="0dp"
                    android:layout_weight="30"
                    android:weightSum="100"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="90"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/air_android"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_marginBottom="8dp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="@dimen/font_xxbig"
                        android:id="@+id/tv_android_label"
                        android:text="Android"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_panel2"
                    android:paddingLeft="@dimen/instruction_padding"
                    android:paddingRight="@dimen/instruction_padding"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_margin="@dimen/instruction_margin"
                    android:background="@drawable/instruction_selector"
                    android:layout_width="0dp"
                    android:layout_weight="30"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:weightSum="100">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="90"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/air_ios"/>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:layout_marginBottom="8dp"
                        android:textStyle="bold"
                        android:textSize="@dimen/font_xxbig"
                        android:id="@+id/tv_ios_label"
                        android:text="iOS"
                        />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="15"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
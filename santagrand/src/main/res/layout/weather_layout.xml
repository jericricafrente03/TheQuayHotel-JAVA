<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="end">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="80"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_country"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="@color/SG2_Gray"
            android:layout_weight="50"
            android:textStyle="bold"
            android:textSize="@dimen/weather_font"
            android:gravity="right|bottom"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:gravity="right|top">

            <TextClock
                android:id="@+id/tv_time"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:textSize="@dimen/weather_font"
                android:textColor="@color/SG2_Gray"
                android:textStyle="bold"/>

            <View
                android:layout_marginRight="@dimen/divider_margin_x"
                android:layout_marginLeft="@dimen/divider_margin_x"
                android:layout_marginTop="@dimen/divider_margin_y"
                android:background="@color/SG2_Gray"
                android:layout_width="@dimen/divider_width"
                android:layout_height="@dimen/divider_height"/>

            <TextView
                android:id="@+id/tv_date"
                android:textColor="@color/SG2_Gray"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:textSize="@dimen/weather_font"
                android:textStyle="bold"/>

            <View
                android:layout_marginRight="@dimen/divider_margin_x"
                android:layout_marginLeft="@dimen/divider_margin_x"
                android:layout_marginTop="@dimen/divider_margin_y"
                android:background="@color/SG2_Gray"
                android:layout_width="@dimen/divider_width"
                android:layout_height="@dimen/divider_height"/>

            <TextView
                android:id="@+id/tv_temperature"
                android:textColor="@color/SG2_Gray"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:textSize="@dimen/weather_font"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="20"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical">

        <ImageView
            android:id="@+id/iv_weather"
            android:layout_width="@dimen/weather_width"
            android:layout_height="@dimen/weather_height"/>
    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_bg"
        android:scaleType="fitXY"
        android:background="#000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top"
        app:layout_constraintGuide_percent="0.15"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_bottom"
        app:layout_constraintGuide_percent="0.85"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_mid"
        app:layout_constraintGuide_percent="0.70"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp" />





    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/gl_mid"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/gl_top"
        android:id="@+id/ll_zone4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"/>

    <LinearLayout
        app:layout_constraintLeft_toRightOf="@+id/gl_mid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/gl_top"
        android:id="@+id/ll_zone1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"/>

    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gl_top"
        app:layout_constraintBottom_toTopOf="@+id/gl_bottom"
        android:id="@+id/ll_zone2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"/>


    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gl_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/ll_zone3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"/>


</androidx.constraintlayout.widget.ConstraintLayout>
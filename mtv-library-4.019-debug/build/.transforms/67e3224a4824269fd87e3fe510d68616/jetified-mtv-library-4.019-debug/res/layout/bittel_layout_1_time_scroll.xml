<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextClock
        android:id="@+id/tc_time"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="12dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />

    <View
        android:background="@color/blue_border"
        app:layout_constraintLeft_toRightOf="@+id/tc_time"
        app:layout_constraintRight_toLeftOf="@+id/tv_scroll"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <com.ph.bittelasia.meshtv.tv.mtvlib.Core.View.CustomView.CustomScrollingTextView.MeshTVScrollingTextView
        android:id="@+id/tv_scroll"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toRightOf="@+id/tc_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Radisson Hotel Group is a leading hospitality company serving as a true host and best partner to guests, owners, business partners and talent. Our eight unique hotel brands offer award-winning and exceptional hotel experiences, originating from our strong Scandinavian heritage of design and innovation. Our brands embody our modern vision of hospitality, including authentic local tastes, stylish living design, unique locations and vibrant social scenes.

Radisson Hotel Group brings a refreshed commitment to hospitality leadership to meet the changing travel industry and the bespoke needs of our guests. We provide exceptional service in all of our hotels across the globe and strive to deliver a hospitality experience that is beyond guest expectations"
        android:marqueeRepeatLimit="marquee_forever"

    android:textSize="24sp"
    android:textStyle="bold"
    android:textColor="@color/white"
    android:layout_width="0dp"
    android:layout_height="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>